{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "publish debug",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "publish",
        "${workspaceFolder}/HTMLMCPSandbox.csproj",
        "-c",
        "Debug",
        "-r",
        "win-x64",
        "--self-contained",
        "false",
        "/p:PublishSingleFile=false"
      ],
      "group": "build",
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish release",
      "type": "shell",
      "command": "dotnet",
      "args": [
        "publish",
        "${workspaceFolder}/HTMLMCPSandbox.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "false",
        "/p:PublishSingleFile=false"
      ],
      "group": "build",
      "problemMatcher": "$msCompile"
    }
  ]
}
